/**
 * Toolbar default style
 */

@import 'config'

// left, middle and right divs container (toolbar)
.inf
    clear                   both
    width                   auto
    height                  25px
    background-color        $toolbar-bg-color
    font-size               $toolbar-font-size
    margin                  0
    padding                 1px 3px 1px 3px
    border                  1px solid #ccc
    overflow                hidden

    // link appearence
    a
        color                   #333
        text-decoration         none
        font-weight             bold
        &:hover
            text-decoration     underline

// left div
.ldiv
    float           left
    width           30%
    position        inherit
    text-align      left

// middle div
.mdiv
    float           left
    width:          38%
    position        inherit
    text-align      center
    padding         1px 0

// right div
.rdiv
    float           right
    width           30%
    position        inherit
    text-align      right
